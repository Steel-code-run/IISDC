{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ESNext",
    "module": "CommonJS",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "useUnknownInCatchVariables": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "downlevelIteration": true,
    "baseUrl": ".",
    "allowJs": true,
  },
  "allowImportingTsExtensions": false,
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist"]
}