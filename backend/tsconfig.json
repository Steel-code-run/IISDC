{
	"compilerOptions": {
		"outDir": "./dist",
		"sourceMap": true,
		"target": "ESNext",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"strict": true,
		"useUnknownInCatchVariables": false,
		"module": "CommonJS",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": false,
		"downlevelIteration": true,
		"baseUrl": ".",
	},
	"include": ["./src/**/*"],
	"exclude": ["node_modules", "dist", "src/**/*.js"]
}
