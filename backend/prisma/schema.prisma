// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Grant {
  id                Int    @id @default(autoincrement())
  namePost          String @db.VarChar(255)
  dateCreationPost  String
  direction         String
  organization      String
  deadline          String
  summary           String
  directionForSpent String
  fullText          String @db.LongText()
  link              String
  linkPDF           String
  sourceLink        String
  timeOfParse       Int
  blackListed       Int
}

model User {
  id            Int             @id @default(autoincrement())
  name          String
  email         String
  password      String
  role          String
  telegramSettings    String
  blocked       Int
  User_acessing User_acessing[]
  User_telegram User_telegram[]
}

model User_telegram {
  id       Int    @id @default(autoincrement())
  user_id  Int
  user     User   @relation(fields: [user_id], references: [id])
  username String
  key      String
}

model User_acessing {
  id      Int  @id @default(autoincrement())
  user_id Int
  user    User @relation(fields: [user_id], references: [id])
  ip      String
  date    String
  path    String
}
